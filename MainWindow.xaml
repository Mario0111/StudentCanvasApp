<Window x:Class="StudentCanvasApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Registration" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Student Registration" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,5" />
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5" />
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>
            <Button Content="Add Student" Margin="0,10" Click="AddStudent_Click"/>
        </StackPanel>
    </Grid>
</Window>

