<UserControl x:Class="StudentCanvasApp.Controls.AdminDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StudentCanvasApp.Controls"
             Height="500" Width="850">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Admin Dashboard"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Students Section -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Students"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,10"/>
                <ListBox x:Name="StudentsListBox"
                         Height="250">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Width="150"/>
                                <TextBlock Text="{Binding Email}" Width="200"/>
                                <Button Content="Delete"
                                        Click="DeleteUser_Click"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- Teachers Section -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Teachers"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,10"/>
                <ListBox x:Name="TeachersListBox"
                         Height="250">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Width="150"/>
                                <TextBlock Text="{Binding Email}" Width="200"/>
                                <Button Content="Delete"
                                        Click="DeleteUser_Click"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <Button Content="Add New Teacher"
                            Width="150"
                            Height="35"
                            Click="AddTeacher_Click"
                            Margin="0,0,10,0"/>
                    <Button Content="Create Class"
                            Width="120"
                            Height="35"
                            Click="CreateClass_Click"/>
                </StackPanel>

                <Button Content="Back"
                        Width="100"
                        Margin="0,15,0,0"
                        Click="Back_Click"/>
            </StackPanel>
        </Grid>

        <!-- Assign to Class Section -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,20,0,0">
            <TextBlock Text="Assign selected student to class:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <ComboBox x:Name="ClassComboBox"
                      Width="200"
                      DisplayMemberPath="ClassName"
                      Margin="0,0,10,0"/>
            <Button Content="Add to Class"
                    Click="AddToClass_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
