<UserControl x:Class="StudentCanvasApp.Controls.EmailVerificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter your verification token:" Margin="0,0,0,5"/>
            <TextBox x:Name="TokenBox" Margin="0,0,0,10"/>
            <Button Content="Verify Account" Click="Verify_Click" Width="150"/>
            <TextBlock x:Name="StatusText" Margin="0,10,0,0" Foreground="Red"/>
        </StackPanel>
    </Grid>
</UserControl>
