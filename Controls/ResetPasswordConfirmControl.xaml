<UserControl x:Class="StudentCanvasApp.Controls.ResetPasswordConfirmControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Margin="20">
            <TextBlock Text="Enter the verification code sent to your email:"/>
            <TextBox x:Name="TokenBox" Margin="0,5" />

            <TextBlock Text="New Password:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="NewPasswordBox" />

            <TextBlock Text="Confirm Password:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="ConfirmPasswordBox" />

            <Button Content="Reset Password" Click="ResetPassword_Click" Margin="0,15,0,0" Width="150" HorizontalAlignment="Center"/>
            <TextBlock x:Name="StatusText" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
