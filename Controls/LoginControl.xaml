<UserControl x:Class="StudentCanvasApp.Controls.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Login" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <TextBlock Text="Email:"/>
        <TextBox x:Name="EmailTextBox" Margin="0,5"/>

        <TextBlock Text="Password:"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

        <Button Content="Login" Margin="0,10" Click="Login_Click"/>
        <TextBlock x:Name="MessageTextBlock" Foreground="Red"/>
    </StackPanel>
</UserControl>
