<UserControl x:Class="StudentCanvasApp.Controls.ViewStudentsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StudentCanvasApp.Controls"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20">
        <Button Content="← Back" Click="BackButton_Click" Width="100" Margin="0,0,0,10"/>

        <TextBlock Text="Students Enrolled in Your Classes" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <ListBox x:Name="StudentListBox" SelectionChanged="StudentListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,5">
                        <TextBlock Text="{Binding FullName}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ClassNames}" FontStyle="Italic" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
