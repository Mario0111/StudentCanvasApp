<UserControl x:Class="StudentCanvasApp.Controls.PasswordResetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Margin="20">
            <TextBlock Text="Enter your registered email:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>
            <Button Content="Send Reset Code" Click="SendResetCode_Click" Width="150" HorizontalAlignment="Left"/>
            <TextBlock x:Name="StatusText" Foreground="Red" Margin="0,10,0,0"/>
            <Button Content="Back to Login" Click="Back_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
