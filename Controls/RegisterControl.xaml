<UserControl x:Class="StudentCanvasApp.Controls.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Margin="20">
            <TextBlock Text="Name"/>
            <TextBox x:Name="NameTextBox" Margin="0,5"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

            <TextBlock Text="Confirm Password"/>
            <PasswordBox x:Name="ConfirmBox" Margin="0,5"/>

            <Button Content="Register" Click="SubmitRegister_Click" Margin="0,10,0,0"/>
            <Button Content="Back to Login" Click="BackToLogin_Click" Margin="0,5,0,0"/>
            <TextBlock x:Name="MessageText" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</UserControl>
