<Window x:Class="StudentCanvasApp.Controls.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentCanvasApp"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="Current Password" Margin="0,5,0,0"/>
        <PasswordBox x:Name="CurrentPasswordBox" Margin="0,0,0,10"/>

        <TextBlock Text="New Password" Margin="0,5,0,0"/>
        <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,10"/>

        <TextBlock Text="Confirm New Password" Margin="0,5,0,0"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>

        <Button Content="Change Password" Click="SubmitChange_Click" Margin="0,10,0,0"/>

        <TextBlock x:Name="MessageText" Foreground="Red" Margin="0,10,0,0"/>
    </StackPanel>


</Window>
